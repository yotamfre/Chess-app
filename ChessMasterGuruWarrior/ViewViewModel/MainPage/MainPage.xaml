<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessMasterGuruWarrior.MainPage"
             BackgroundColor="Green">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Chess Master Guru Warrior Legend" HorizontalTextAlignment="Center" TextColor="DarkBlue" FontSize="36" FontAttributes="Bold"/>
        </Frame>
        <Button Text="New Game" Command="{Binding OnNewGameClicked}"/>
        <Button Text="Settings" Command="{Binding OnSettingsClicked}"/>
        
    </StackLayout>

</ContentPage>
